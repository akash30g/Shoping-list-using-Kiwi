BoxLayout:
    id: mainBox
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                Button:
                    id: mainButton
                    text: 'List Required'
                    on_press: app.requiredListMain()
                Button:
                    id: mainButton
                    text: 'List Completed'
                    on_press: app.list_in_stock()
                Label:
                    text: 'Add a new item..'
                Label:
                    text: 'Name'
                TextInput:
                    id: item_name
                    multiline: False
                    write_tab: False
                Label:
                    text: 'Price'
                TextInput:
                    id: item_price
                    multiline: False
                    write_tab: False
                Label:
                    text: 'Priority'
                TextInput:
                    id: item_priority
                    multiline: False
                    write_tab: False
                Button:
                    id: addButton
                    text: 'Add Item'
                    on_press: app.additem()
                Button:
                    id: clearButton
                    text: 'Clear'
                    on_release: app.clearItem()
                Button:
                    id: saveButton
                    text: 'Save and Exit'
                    on_press: app.saveItem()
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: (1, 0.25)
                    Label:
                        id: itemInfo
                        size_hint_y: 0.1
                        color: (1, 1, 0, 1)
                GridLayout:
                    id: itemDisplay
                    cols: 1
                    orientation: 'vertical'
        Label:
            id: instructionMenu
            font_size: 20
            size_hint_y: 0.1
            color: (1, 1, 0, 1)


