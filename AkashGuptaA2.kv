

BoxLayout:
    id: mainBox
    Popup:
        id: popup
        title: "EXIT THE PROGRAM"
        size_hint_y: 0.5
        size_hint_x: 0.5
        on_parent:
            if self.parent == mainBox: self.parent.remove_widget(self)
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Are you sure you want to quit?'
                width: 100
                font_size: 20
            Label:
                id: show
                font_size: 20
                color: (1, 1, 0, 1)
            Button:
                id: close_button
                text: 'Close'
                on_press: app.stop()
                size_hint_y: 0.4
            Button:
                id: cancel_button
                text: 'Cancel'
                size_hint_y: 0.4
                on_press: app.required_list_main()
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                Button:
                    id: mainButton
                    text: 'List Required'
                    on_press: app.required_list_main()
                Button:
                    id: mainButton
                    text: 'List Completed'
                    on_press: app.completed_list_main()
                Label:
                    text: 'Add a new item..'
                Label:
                    text: 'Name'
                TextInput:
                    id: item_name
                    multiline: False
                    write_tab: False
                Label:
                    text: 'Price'
                TextInput:
                    id: item_price
                    multiline: False
                    write_tab: False
                Label:
                    text: 'Priority'
                TextInput:
                    id: item_priority
                    multiline: False
                    write_tab: False
                Button:
                    id: addButton
                    text: 'Add Item'
                    on_press: app.add_item()
                Button:
                    id: clearButton
                    text: 'Clear'
                    on_release: app.clear_item()
                Button:
                    id: saveButton
                    text: 'Save and Exit'
                    on_press: app.save_item()
            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: (1, 0.25)
                    Label:
                        id: itemInfo
                        font_size: 20
                        size_hint_y: 0.1
                        color: (1, 1, 0, 1)
                GridLayout:
                    id: itemDisplay
                    cols: 1
                    orientation: 'vertical'
        Label:
            text_size: self.size
            id: instructionMenu
            font_size: 20
            size_hint_y: 0.1
            color: (1, 1, 0, 1)
            valign: 'middle'
            halign: 'center'


